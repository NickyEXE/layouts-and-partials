<% if @team.errors.any? %>
  <ul>
    <% @team.errors.full_messages do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @team do |fteam| %>
  <%= fteam.label :name %>
  <%= fteam.text_field :name %><br>
  <%= fteam.label :locality %>
  <%= fteam.text_field :locality %><br>
  <%= fteam.label :established %>
  <%= fteam.number_field :established %><br>
    <%= fteam.fields_for :superheros do |fs| %>
      <h3>Add Superhero:</h3>
      <%= render partial:"superheros/formpart", locals:{f: fs} %>
    <% end %>
  <br>
  <%= fteam.submit %>
<% end %>
